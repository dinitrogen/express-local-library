<h1>{{title}}: {{Books.name}}</h1>

{{#if (hasMembers book_instances)}}
<p><strong>Delete the following copies of this book before attempting to delete the book</strong></p>
<div style="margin-left:20px;margin-top:20px">
    <h4>Book Instances (copies)</h4>

    <dl>
        {{#each book_instances}}
        <dt>
            <a href={{this.url}}>{{../book.title}}</a>
        </dt>
        <dd>{{this.status}}</dd>
        {{/each}}
    </dl>
</div>
{{else}}
<p>Do you really want to delete this Book?</p>

<form method="POST" action="">
    <div class="form-group">
        <input id="bookid" class="form-control" type="hidden" name="bookid" required="true" value={{book._id}}>
    </div>

    <button class="btn btn-primary" type="submit">Delete</button>

</form>

{{/if}}
