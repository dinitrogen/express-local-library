<h1>{{title}}</h1>

<form method="POST" action="">
    <div class="form-group">
        <label for="title">Title: </label>
        <input id="title" class="form-control" type="text" placeholder="Name of book" name="title" value="{{getFormValue book 'title'}}">
    </div>
    <div class="form-group">
        <label for="author">Author: </label>
        <select id="author" class="form-control" type="select" placeholder="Select author" name="author" required="true">
                {{#each (sort_authors authors)}}
                {{#if ../book}}
                <option value={{this._id}} {{#if (isSelected ../book this._id)}}selected{{/if}}>{{this.name}}</option>
                {{else}}
                <option value={{this._id}}>{{this.name}}</option>
                {{/if}}
                {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="summary">Summary:</label>
        <textarea id="summary" class="form-control" type="textarea" placeholder="Summary" name="summary">{{getFormValue book 'summary'}}</textarea>
    </div>
    <div class="form-group">
        <label for="isbn">ISBN:</label>
        <input id="isbn" class="form-control" type="text" placeholder="ISBN13" name="isbn"  value="{{getFormValue book 'isbn'}}">
    </div>
    <div class="form-group">
        <label>Genre:</label>
        <div>
            {{#each genres}}
            <div style="display:inline; padding-right:10px;">
                <input class="checkbox-input" type="checkbox" name="genre" id={{this._id}} value={{this._id}} {{#if (isChecked this)}}checked{{/if}}>
                <label for={{this._id}}>{{this.name}}</label>
            </div>
            {{/each}}
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>

</form>

{{#if errors}}
<ul>
    {{#each errors}}
    <li>{{this.msg}}</li>
    {{/each}}
</ul>
{{/if}}

